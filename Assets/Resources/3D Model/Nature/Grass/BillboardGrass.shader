			float4 tex2DNode1 = tex2D( _TextureSample0, uv_TextureSample0 );
			c.rgb = tex2DNode1.rgb;
			c.a = tex2DNode1.a;
			return c;
		}

		inline void LightingStandardCustomLighting_GI( inout SurfaceOutputCustomLightingCustom s, UnityGIInput data, inout UnityGI gi )
